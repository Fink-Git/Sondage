
{% extends 'RennesJeuxSondageBundle::base.html.twig' %}

{%  block body %}
<h1 class="page-header">Sessions</h1>
<h2 class="sub-header">Sessions proposées</h2>
{% if sessionsProposees|length > 0 %}
<div class="table-responsive">
	<table class="table table-striped">
	  <thead>
	    <tr>
	      <th>Date</th>
	      <th>Nom</th>
	      <th>Par qui ?</th>
	      <th>Ou ?</th>
	      <th>Participants</th>
	      <th>Action</th>
	    </tr>
	  </thead>
	  <tbody>
	  	{% for session in sessionsProposees %}
	    <tr>
	      <td>{{ session.date|date('d/m/Y') }}</td>
	      <td>{{ session.jeu.nom }}</td>
	      <td>{{ session.jeu.hote }}</td>
	      <td>{% if session.jeu.lieu %}{{ session.jeu.lieu }}{% endif %}</td>
	      <td>{{ session.nbParticipants }}</td>
	      <td>Je veux participer</td>
	    </tr>
	    {% endfor %}
	  </tbody>
	</table>
</div>
{% else %}
Pas de sessions pour l'instant
{% endif %}
<h2 class="sub-header">Sessions validées</h2>
{% if sessionsValidees|length > 0 %}
<div class="table-responsive">
	<table class="table table-striped">
	  <thead>
	    <tr>
	      <th>Date</th>
	      <th>Nom</th>
	      <th>Par qui ?</th>
	      <th>Ou ?</th>
	      <th>Participants</th>
	      <th>Action</th>
	    </tr>
	  </thead>
	  <tbody>
	  	{% for sess in sessionsValidees %}
	    <tr>
	      <td>{{ sess.date|date('d/m/Y') }}</td>
	      <td>{{ sess.jeu.nom }}</td>
	      <td>{{ sess.jeu.hote }}</td>
	      <td>{% if sess.jeu.lieu %}{{ sess.jeu.lieu }}{% endif %}</td>
	      <td>{{ sess.nbParticipants }}</td>
	      <td>Je veux participer</td>
	    </tr>
	    {% endfor %}
	  </tbody>
	</table>
</div>
{% else %}
Pas de sessions pour l'instant
{% endif %}
{% endblock %}

